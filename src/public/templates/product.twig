<div class="col-sm-6 col-md-4 col-xs-12">
    <div class="thumbnail">
        <h4 class="text-center">
            <span class="label label-info">ProductID: {{ productID }}</span>
        </h4>
        <div>IMG: {{ imageURL }}</div>
        <div class="caption">
            <div class="row">
                <div class="col-md-6 col-xs-6">
                    <h3>{{ name }}</h3>
                </div>
                <div class="col-md-6 col-xs-6 price">
                    <h3>
                        <label>{{ currency }} {{ price }}</label>
                    </h3>
                </div>
            </div>

            <p>{{ description }}</p>

            <div class="row">
                {% for category in categories %}
                    <div class="col-md-6 col-xs-6">
                        <h3><span class="label label-info">{{ category }}</span></h3>
                    </div>
                {% endfor %}

            </div>
        </div>
    </div>
</div>